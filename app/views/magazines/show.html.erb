<p>
  <b>Title:</b>
  <%=h @magazine.title %>
</p>

<p>
  <b>Number of pages:</b>
  <%=h @magazine.number_of_pages %>
</p>

<p>
  <b>Publisher:</b>
  <%=h @magazine.publisher %>
</p>

<p>
  <b>Tags:</b>
  <%=h @magazine.tags %>
</p>

<p>
  <b>Release date:</b>
  <%=h @magazine.release_date %>
</p>
  
<p>
  <b>Image:</b>
  <%= image_tag @magazine.cover.url(:thumb) %>
</p>


<h1>Lista de paginas</h1>

<% unless @magazine.pages.empty?%>
  <table>
  <thead>
  <tr>
  <th> Page Number </th>
  <th> Image </th>
  <th> Actions </th>
  </tr>
  </thead>
  <tbody>
  <%=render :partial => "/pages/page", :collection => @magazine.pages %>
  </tbody>
  </table>
<%end%>


<%= link_to "Add pages" , new_magazine_page_url(@magazine) %> 
  
<%= link_to 'Edit', edit_magazine_path(@magazine) %> |
<%= link_to 'Back', magazines_path %>
<%= link_to 'Show magazine', :action => "show_magazine", :id => @magazine%>
