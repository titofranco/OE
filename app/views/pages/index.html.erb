<h1>Listing magazines_pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Cover</th>
    <th>Page Number</th>
    <th>Image</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.magazine.title %></td>
    <td><%=image_tag page.magazine.cover.url(:thumb) %></td>
    <td><%=h page.page_number %></td>
    <td><%=image_tag page.image.url(:thumb) %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

